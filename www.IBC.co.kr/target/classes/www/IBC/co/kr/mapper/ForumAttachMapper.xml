<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace ="www.IBC.co.kr.mapper.ForumAttachMapper">

	<insert id="insert">
		insert into tbl_fattach(uuid,uploadpath,filename,filetype,fno)
		values(#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{fno})
	</insert>
	
	<delete id="delete">
		delete from tbl_fattach where uuid=#{uuid}
	</delete>
	
	<select id="findByFno" resultType="www.IBC.co.kr.ForumAttachVO">
		select * from tbl_fattach where fno=#{fno}
	</select>



</mapper>